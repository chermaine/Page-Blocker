
{
  "manifest_version": 2,

  "name": "Page Blocker",
  "description": "Block new tabs or windows from opening when it is turned on.",
  "version": "1.0.1",

  "browser_action": {
  	"default_title": "Turn On Page Blocker",
    "default_icon": "inactive-32.png"
  },

  "background": {
  	"scripts": ["background.js"],
    "persistent": false
  },

  "icons": {
    "16": "inactive-16.png",
    "32": "inactive-32.png",
    "128": "inactive-128.png"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "http://*/*",
	  "https://*/*"
  ]
}